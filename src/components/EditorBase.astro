<div id="editor" class="col mt-2" style="position: relative;">
  <span>Select Theme:</span>
  <select id="themeselect">
    <option>vs</option>
    <option>vs-dark</option>
    <option>hc-dark</option>
  </select>

  <button
    id="run_btn"
    style="float: right; z-index: 1; position: absolute;top: 55px; right: 14px;"
    class="btn btn-outline-light shadow-sm btn-dark"
    >Run <i class="bi bi-play"></i></button
  >
  <label> <input id="compile_only" type="checkbox" /> Compile Only</label>
  <div id="loader" class="loader">Loading...</div>
  <div
    id="container"
    style="width: 100%; height: 300px; border: 1px solid rgb(151, 134, 134)"
    class="mt-3"
  >
  </div>
</div>
<!-- OR ANY OTHER AMD LOADER HERE INSTEAD OF loader.js -->
<script src="monaco-editor/min/vs/loader.js"></script>
<script src="../scripts/editor/index.js"></script>

<script>
  import { runcode } from "../scripts/editor";

  document.getElementById("run_btn").addEventListener("click", function () {
    runcode();
  });
</script>
